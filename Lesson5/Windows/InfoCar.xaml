<Window x:Class="Lesson5.InfoCar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson5"
        mc:Ignorable="d"
        Title="InfoCar" Height="450" Width="800"  WindowStartupLocation="CenterScreen">
    
    <StackPanel>
        <Label FontSize="25">Vendor</Label>
        <TextBox FontSize="25" Text="{Binding Car.Vendor, UpdateSourceTrigger=PropertyChanged}"></TextBox>

        <Label FontSize="25">Model</Label>
        <TextBox FontSize="25" Text="{Binding Car.Model, UpdateSourceTrigger=PropertyChanged}"></TextBox>

        <Label FontSize="25">Year</Label>
        <TextBox FontSize="25" Text="{Binding Car.Year, UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </StackPanel>
    
</Window>
